{
  "name": "code-rag-assistant",
  "displayName": "Code RAG Agent",
  "description": "Your local AI coding assistant with AST-aware search & autonomous agent capabilities.",
  "version": "0.1.0",
  "publisher": "myshkin451",
  "repository": {
    "type": "git",
    "url": "https://github.com/Achernar-Eridani/code-rag"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Education"
  ],
  "keywords": [
    "RAG",
    "LLM",
    "Agent",
    "Code Search",
    "OpenAI",
    "Local LLM"
  ],
  "galleryBanner": {
    "color": "#1e293b",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:rag.search",
    "onCommand:rag.explain",
    "onCommand:rag.agentExplain",
    "onView:ragSearchView",
    "onCommand:rag.buildIndex" 
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rag.search",
        "title": "RAG: Search Code"
      },
      {
        "command": "rag.explain",
        "title": "RAG: Explain Selection"
      },
      {
        "command": "rag.agentExplain",
        "title": "RAG: Ask Code Agent"
      },
      {
      "command": "rag.buildIndex",
      "title": "RAG: Build Index (Current Workspace)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Code RAG Assistant",
      "properties": {
        "rag.apiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "Optional LLM API key. If set, it will be sent as the `x-api-key` header.",
          "scope": "application"
        },
        "rag.apiBase": {
          "type": "string",
          "default": "http://127.0.0.1:8000",
          "description": "Your RAG API base URL."
        },
        "rag.topK": {
          "type": "number",
          "default": 8,
          "description": "Top-K results for /search and /explain."
        },
        "rag.symbolBoost": {
          "type": "number",
          "default": 2,
          "description": "Symbol priority boost for hybrid search."
        },
        "rag.providerOverride": {
          "type": "string",
          "enum": [
            "auto",
            "openai",
            "local",
            "qwen_api"
          ],
          "default": "auto",
          "description": "Force provider for /explain (auto uses backend default)."
        },
        "rag.maxTokens": {
          "type": "number",
          "default": 600,
          "description": "Max LLM output tokens."
        },
        "rag.maxCtxChars": {
          "type": "number",
          "default": 6000,
          "description": "Max context chars passed to LLM."
        },
        "rag.repoPathPrefix": {
          "type": "string",
          "default": "",
          "description": "Path prefix to strip from indexed paths (e.g., 'test_repos/lodash/')."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rag-container",
          "title": "Code RAG",
          "icon": "$(search)"
        }
      ]
    },
    "views": {
      "rag-container": [
        {
          "id": "ragSearchView",
          "name": "Search Results"
        }
      ]
    }
  },
  "scripts": {
    "build": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --platform=node --external:vscode",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --platform=node --external:vscode --watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/jszip": "^3.4.0",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.84.0",
    "esbuild": "^0.23.0",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "form-data": "^4.0.5",
    "jszip": "^3.10.1"
  }
}
